{
  "name": "presence",
  "version": "2.0.0",
  "private": true,
  "description": "Presence management app",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.prod.js --progress",
    "deploy": "surge --project public",
    "doc": "rimraf doc && groc",
    "lint": "eslint .",
    "start": "node tools/dev-server.js",
    "start:d": "webpack-dashboard -- npm start",
    "test": "jest",
    "test:cov": "npm test -- --coverage",
    "test:watch": "npm test -- --watch"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions",
              "> 1%",
              "safari >= 10"
            ],
            "node": "current"
          }
        }
      ],
      "react",
      "stage-3"
    ],
    "plugins": [
      "react-hot-loader/babel",
      "transform-class-properties",
      "transform-decorators-legacy"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "standard",
      "import"
    ],
    "extends": [
      "standard",
      "standard-jsx",
      "plugin:import/errors"
    ],
    "rules": {
      "import/newline-after-import": "error",
      "import/no-extraneous-dependencies": "error",
      "import/no-named-as-default-member": "warn"
    },
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "notify": true,
    "setupTestFrameworkScriptFile": "<rootDir>/jest/setup.js"
  },
  "keywords": [
    "presence"
  ],
  "author": "Christophe Porteneuve <christophe@delicious-insights.com>",
  "license": "No-License (see LICENSE file)",
  "dependencies": {
    "airbnb-prop-types": "^2.7.0",
    "autobind-decorator": "^2.1.0",
    "history": "^4.6.3",
    "isomorphic-fetch": "^2.2.1",
    "localforage": "^1.5.0",
    "material-ui": "^0.18.5",
    "moment": "^2.11.2",
    "prop-types": "^15.5.8",
    "react": "^15.4.2",
    "react-document-title": "^2.0.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.3",
    "react-router-dom": "^4.1.1",
    "react-tap-event-plugin": "^2.0.0",
    "reduce-reducers": "^0.1.2",
    "redux": "^3.7.1",
    "redux-offline": "^2.0.0"
  },
  "devDependencies": {
    "autoprefix": "^1.0.1",
    "autoprefixer": "^7.1.1",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.0",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.3.2",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-3": "^6.22.0",
    "body-parser": "^1.17.1",
    "chai": "^4.0.2",
    "chai-enzyme": "^0.8.0",
    "chai-jest-diff": "^1.0.1",
    "colors": "^1.1.2",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.0",
    "cz-conventional-changelog": "^2.0.0",
    "dirty-chai": "^2.0.0",
    "enzyme": "^2.9.1",
    "enzyme-to-json": "^1.5.0",
    "eslint": "^4.1.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-jsx": "^4.0.2",
    "eslint-plugin-import": "2.6.0",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.1.0",
    "eslint-plugin-standard": "^3.0.1",
    "express": "^4.15.2",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "groc": "^0.8.0",
    "istanbul": "^0.4.3",
    "jest": "^20.0.4",
    "jest-matchers": "^20.0.3",
    "marked": "^0.3.6",
    "morgan": "^1.8.1",
    "offline-plugin": "^4.6.1",
    "postcss-loader": "^2.0.6",
    "react-addons-test-utils": "^15.4.2",
    "react-hot-loader": "3.0.0-beta.6",
    "react-test-renderer": "^15.4.2",
    "rimraf": "^2.6.1",
    "sinon": "^2.3.6",
    "sinon-chai": "^2.9.0",
    "style-loader": "^0.18.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "surge": "^0.19.0",
    "url-loader": "^0.5.8",
    "webpack": "^3.0.0",
    "webpack-dashboard": "^0.4.0",
    "webpack-dev-middleware": "^1.11.0",
    "webpack-hot-middleware": "^2.18.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
